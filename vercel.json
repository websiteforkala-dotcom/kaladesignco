{
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
        {
            "source": "/login",
            "destination": "/admin/login.html"
        },
        {
            "source": "/admin/login",
            "destination": "/admin/login.html"
        },
        {
            "source": "/admin/dashboard",
            "destination": "/admin/index.html"
        },
        {
            "source": "/(.*)",
            "destination": "/404.html",
            "condition": "not-found"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                }
            ]
        }
    ]
}